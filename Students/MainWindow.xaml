<Window x:Class="Students.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Students"
        mc:Ignorable="d"
        Title="Учёт студентов" 
        Height="350" Width="525"
        WindowStartupLocation="CenterScreen" Icon="Resources/icon.png">
    <Grid>
        <ListBox x:Name="listBox" VerticalAlignment="Stretch" SelectionMode="Multiple" Margin="0,25,0,0" HorizontalAlignment="Stretch" ToolTip="Список студентов" />
        
        <Button x:Name="addButton" Content="Добавить" HorizontalAlignment="Right" Margin="0,4,181.667,0" VerticalAlignment="Top" Width="75" Click="addButton_Click" ToolTip="Добавить новый элемент"/>
        <Button x:Name="editButton" Content="Изменить" HorizontalAlignment="Right" Margin="0,4,92.667,0" VerticalAlignment="Top" Width="75" Click="editButton_Click" ToolTip="Изменить каждый выбранный элемент"/>
        <Button x:Name="deleteButton" Content="Удалить" HorizontalAlignment="Right" Margin="0,4,3.667,0" VerticalAlignment="Top" Width="75" Click="deleteButton_Click" ToolTip="Удалить выбранные элементы"/>
        
        <Label x:Name="label" Content="Текущий список студентов:" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left"/>
    </Grid>
</Window>
